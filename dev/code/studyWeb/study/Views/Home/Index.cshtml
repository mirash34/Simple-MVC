@model study.Models.InformationWithProperty
@{
    ViewBag.Title = "Home Page";
}
<script src="/Content/js/JavaScript1.js"></script>
<link rel="stylesheet" type="text/css" href="/content/css/main.css" />
<div class="information">


    <div>

        @*<a id="new-element" href="/card/-1">new element</a>*@
        <a id="new-element" href="javascript://">new element</a>
       
        <br />

        
        <table>
            <thead>
                <tr>
                    <th class="@(Model.Property == "Id" ? Model.Direction == "Asc" ? "dsc" : "asc":"")"><a href="/home/Index/?Property=Id&Direction=@(Model.Property == "Id" && Model.Direction == "Asc" ? "Dsc" : "Asc")">№</a></th>
                    <th class="@(Model.Property == "Title" ? Model.Direction == "Asc" ? "dsc" : "asc":"")"><a href="/home/Index/?Property=Title&Direction=@(Model.Property=="Title" && Model.Direction=="Asc" ? "Dsc" : "Asc")">Title</th>
                    <th class="@(Model.Property == "Description" ? Model.Direction == "Asc" ? "dsc" : "asc":"")"><a href="/home/Index/?Property=Description&Direction=@(Model.Property=="Description" && Model.Direction=="Asc" ? "Dsc" : "Asc")">Description</th>
                    <th class="@(Model.Property == "PublicationDate" ? Model.Direction == "Asc" ? "dsc" : "asc" :"")"><a href="/home/Index/?Property=PublicationDate&Direction=@(Model.Property=="Date" && Model.Direction=="Asc" ? "Dsc" : "Asc")">Date</a></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tr class="NewRow" rowid="-1">

                <td colspan="6">
                    <div class="form">
                        <h2>Card</h2>

                        <form>

                            <div>
                                <br />
                                <label>Title</label>
                                <br />
                                <input class="Title" type="text" value="" />

                            </div>
                            <div>
                                <br />
                                <label>Description</label>
                                <br />
                                <textarea class="Description"></textarea>
                            </div>
                            <div>
                                <br />
                                <label>Date</label>
                                <br />
                                <input class="PublicationDate" type="text" value="" />

                            </div>

                            <div>
                                <br />
                                @*<img class="loader" src="~/Content/css/ajax-loader.gif" />*@
                                <textarea class="loader"> Подождите </textarea>
                                <input class="buttons" type="button" value="save">
                            </div>


                        </form>
                    </div>
                </td>

            </tr>



            @for (int i = 0; i < Model.List.Count; i++)
            {
                <tr>
                    <td class="current-Id">@Model.List[i].Id</td>
                    <td class="current-Title">@Model.List[i].Title</td>
                    <td class="current-Description">@Model.List[i].Description</td>
                    <td class="current-PublicationDate">@Model.List[i].PublicationDate</td>
                    @*<td><a href="/card/@Model.List[i].Id">Change this row</a></td>*@
                    <td><a href="javascript://" class="this">Change this row</a></td>

                    @*<td class="remove"><a href="/home/removeStr/?IdVar=@Model.List[i].Id">X</a></td>*@
                    <td class="remove"><a href="javascript://">X</a></td>
                </tr>
                <tr class="change-row" rowid="@Model.List[i].Id">
                
                <td colspan="6">
                    <div class="form">
                        <h2>Card</h2>
                       
                        <form>

                            <div>
                                <br />
                                <label>Title</label>
                                <br />
                                <input class="Title" type="text" value="@Model.List[i].Title" />

                            </div>
                            <div>
                                <br />
                                <label>Description</label>
                                <br />
                                <textarea class="Description">@Model.List[i].Description</textarea>
                            </div>
                            <div>
                                <br />
                                <label>Date</label>
                                <br />
                                <input class="PublicationDate" type="text" value="@Model.List[i].PublicationDate" />

                            </div>

                            <div>
                                <br />
                                @*<img class="loader" src="~/Content/css/ajax-loader.gif" />*@
                                <textarea class="loader"> Подождите </textarea>
                                <input class="buttons" type="button" value="save">
                            </div>


                        </form>
                    </div>
                </td>

                </tr>
            }
          
            <tfoot>
                <tr class="last">
                    <td colspan="3"></td>


                    <td colspan="3" id="sum">Итого:@Model.List.Count()</td>



                </tr>
            </tfoot>




        </table>
        <br />
        <div class="paginator">
            <a class="@(Model.NumberOfPage==1 ? "disabled":"prev")" href="/home/Index/?NumberOfPage=@(Model.NumberOfPage-1)&Direction=@Model.Direction&Property=@Model.Property">Назад</a>
            @for (int i = 1; i < Model.AllNumbersOfObject; i++)
            {<a class="@(Model.NumberOfPage == i ? "current" : "")" href="/home/Index/?NumberOfPage=@(i)&Direction=@Model.Direction&Property=@Model.Property">@(i)</a>
            }
            @* <a class="@(Model.NumberOfPage == 1 ? "current" : "")" href="/home/Index/?NumberOfPage=1&Direction=@Model.Direction&Property=@Model.Property">1</a>

                <a class="@(Model.NumberOfPage==2 ? "current":"")" href="/home/Index/?NumberOfPage=2&Direction=@Model.Direction&Property=@Model.Property">2</a>
                <a class="@(Model.NumberOfPage==3 ? "current":"")" href="/home/Index/?NumberOfPage=3&Direction=@Model.Direction&Property=@Model.Property">3</a>*@
            <a class="@(Model.NumberOfPage==Model.AllNumbersOfObject-1 ? "disabled":"next")" href="/home/Index/?NumberOfPage=@(Model.NumberOfPage+1)&Direction=@Model.Direction&Property=@Model.Property">Вперёд</a>
        </div>

        @*<span>&hellip;</span>*@
    </div>

